{
  "manifest_version": 3,
  "name": "Clause & Effect",
  "version": "1.0.0",
  "description": "AI-powered legal document analyzer for Chrome",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "media/logo.png",
    "48": "media/logo.png",
    "128": "media/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "media/logo.png",
      "48": "media/logo.png",
      "128": "media/logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["prompts/*.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}
